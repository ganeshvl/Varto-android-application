<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/textview_good_time_item"
            android:textSize="10sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"
            android:gravity="right"
            android:paddingTop="2dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageview_good_image_item"
                android:visibility="visible"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_logo"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title good"
            android:id="@+id/textview_good_title_item"
            android:textSize="16sp"
            android:textColor="@color/text_color_black"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/textview_good_description_item"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12dp" />

        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffd0d0d0"
            android:id="@+id/view"
            android:layout_below="@+id/imageview_menu_logo"
            android:visibility="invisible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff3f3f3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="257,34 грн."
                android:id="@+id/textview_good_old_price_item"
                android:textColor="@color/text_color_black"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textview_good_new_price_item"
                android:layout_toStartOf="@+id/textview_good_new_price_item"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вартіть зі знижкою:"
                android:id="@+id/textView2"
                android:textColor="@color/text_color_black"
                android:layout_alignTop="@+id/textview_good_old_price_item"
                android:layout_toLeftOf="@+id/textview_good_old_price_item"
                android:layout_toStartOf="@+id/textview_good_old_price_item"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:gravity="right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="248,45 грн."
                android:id="@+id/textview_good_new_price_item"
                android:textColor="@color/text_color_red"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="16dp"
                android:paddingBottom="5dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>