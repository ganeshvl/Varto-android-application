<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/shop_layout"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_bottom_description"
    android:paddingLeft="@dimen/padding_side_description"
    android:paddingRight="@dimen/padding_side_description"
    android:paddingTop="@dimen/padding_top_description"
    tool:context=".activity.ContainerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_left_image_description"
            android:src="@mipmap/ic_today"
            android:contentDescription="@null" />

        <es.esy.varto_novomyrgorod.varto.adapters.TypefaceTextView
            android:id="@+id/title_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="@string/title_schedule_today"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base_font_size"
            app:customTypeface="Lato-Light.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_left_image_description"
            android:src="@mipmap/ic_map"
            android:contentDescription="@null" />

        <es.esy.varto_novomyrgorod.varto.adapters.TypefaceTextView
            android:id="@+id/title_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:textColor="@color/color_gray_dark"
            android:textSize="@dimen/base_font_size"
            app:customTypeface="Lato-Light.ttf"
            tool:text="Location" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_left_image_description"
            android:src="@mipmap/ic_email"
            android:contentDescription="@null" />

        <es.esy.varto_novomyrgorod.varto.adapters.TypefaceTextView
            android:id="@+id/title_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:textColor="@color/color_gray_dark"
            android:textSize="@dimen/base_font_size"
            app:customTypeface="Lato-Light.ttf"
            tool:text="Email" />

    </LinearLayout>
</LinearLayout>